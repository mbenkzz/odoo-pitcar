<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mechanic_credential_wizard_form" model="ir.ui.view">
        <field name="name">mechanic.credential.wizard.form</field>
        <field name="model">mechanic.credential.wizard</field>
        <field name="arch" type="xml">
            <form string="Mechanic Credentials">
                <sheet>
                    <group>
                        <field name="mechanic_id" invisible="1"/>
                        <field name="login" readonly="1"/>
                        <field name="temp_password" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>